{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "../dist/js",
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  },
  "files": [
    "./*/*.ts"
  ]
}